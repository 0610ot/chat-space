.message{"data-id": message.id}
  .message__top
    %p.message__top__info
      = message.user.name
    %p.message__top__time
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message__text
    - if message.content.present?
      %p.message__top__text
        = message.content
    = image_tag message.image.url, class: '' if message.image.present?